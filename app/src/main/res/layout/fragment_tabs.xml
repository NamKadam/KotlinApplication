<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_color"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:id="@+id/card_work_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5"
                app:cardCornerRadius="6dp"
                app:cardElevation="@dimen/size_5">

                <LinearLayout
                    android:id="@+id/lin_work_det"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"

                    android:layout_margin="@dimen/size_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_5"
                        android:layout_weight="0.8"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/txt_workType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/str_font_bold"
                            android:text="Work Type : "
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_workType1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/str_font_regular"
                            android:text=" Service"
                            android:layout_weight="1"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_8"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_workDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/str_font_bold"
                            android:text="Work date : "
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_workDate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/str_font_regular"
                            android:layout_weight="1"
                            android:text="19-12-2019"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_marginTop="@dimen/size_8">
                        <TextView
                            android:id="@+id/txt_workProd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/str_font_bold"
                            android:text="Product : "
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_workProd1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/str_font_regular"
                            android:layout_weight="1"
                            android:text=" Solar Water Heater"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/size_8">
                        <TextView
                            android:id="@+id/txt_workComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/str_font_bold"
                            android:text="Work Comment : "
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_workComment1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/str_font_regular"
                            android:text=" Solar AMC"
                            android:layout_weight="1"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginRight="@dimen/size_5"
            android:layout_marginBottom="5dp"
            app:cardElevation="@dimen/size_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_8"
                android:layout_margin="@dimen/size_10">



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeWidth="@dimen/size_5"
                    app:hintTextAppearance="@style/TextLabel"
                    app:boxStrokeColor="@color/colorPrimary"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_earnWork"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:hint="Earning"
                        android:inputType="number"
                        android:padding="@dimen/size_10"
                        android:background="@null"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeWidth="@dimen/size_8"
                    app:boxBackgroundMode="outline"
                    app:hintTextAppearance="@style/TextLabel"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/size_8">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_expensesWork"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:hint="Expenses"
                        android:background="@null"
                        android:inputType="number"
                        android:padding="@dimen/size_10"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:padding="@dimen/size_10"
                    android:background="@drawable/drawable_editext"
                    >

                    <Spinner
                        android:id="@+id/spnr_statusWork"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_date_CallSche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_5"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/size_8"
                    android:background="@drawable/drawable_editext">

                    <TextView
                        android:id="@+id/txt_dt_callSche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"

                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:padding="5dp"
                        android:text="DD/MM/YYY" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeWidth="@dimen/size_5"
                    app:hintTextAppearance="@style/TextLabel"
                    app:boxStrokeColor="@color/colorPrimary"                            android:layout_marginTop="@dimen/size_8"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_commentsWork"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:fontFamily="@string/str_font_regular"
                        android:gravity="top"
                        android:hint="Comments"
                        android:background="@null"
                        android:inputType="textMultiLine"
                        android:maxLines="10"
                        android:padding="@dimen/size_10"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5"
                    >

                    <TextView
                        android:id="@+id/txtother"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Attach Documents:"
                        android:visibility="gone"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/img_uploadfiles"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:layout_marginTop="@dimen/size_10"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginLeft="@dimen/size_5"
                        android:src="@drawable/ic_photo_camera"
                        android:layout_toRightOf="@id/txtother"
                        />


                </RelativeLayout>
                <!--dynamic view-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/linear_verImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:id="@+id/linear_imageview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            >
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycl_images"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </ScrollView>


                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_15"
                    android:layout_marginBottom="@dimen/size_10"
                    android:background="@drawable/drawable_btn"
                    android:fontFamily="sans-serif"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_assign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_8"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:layout_margin="@dimen/size_15"
                android:visibility="visible"
                android:layout_marginTop="@dimen/size_20"
                android:background="@drawable/drawable_editext"
                >

                <Spinner
                    android:id="@+id/spnr_assignToWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_updt_assign"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:text="Update"
                android:textAllCaps="false"
                android:layout_margin="@dimen/size_20"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:background="@drawable/drawable_btn"/>

        </LinearLayout>


        <!--            <androidx.cardview.widget.CardView-->
        <!--                android:id="@+id/card_logs"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_margin="@dimen/size_5"-->
        <!--                app:cardCornerRadius="6dp"-->
        <!--                app:cardElevation="@dimen/size_5">-->

        <!--                <LinearLayout-->

        <!--                    android:layout_width="match_parent"-->
        <!--                    android:layout_height="wrap_content"-->
        <!--                    android:layout_margin="@dimen/size_5"-->
        <!--                    android:orientation="vertical">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Action Logs"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_expand"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycl_actionLogs"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_msg_workdet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:text="No Data Available"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!--                </LinearLayout>-->

        <!--            </androidx.cardview.widget.CardView>-->
    </LinearLayout>


</androidx.core.widget.NestedScrollView>