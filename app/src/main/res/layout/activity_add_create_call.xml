<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.ActivityAddCustNewCall">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <LinearLayout
       android:id="@+id/linear_custCallDet"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:visibility="gone"
       android:background="@color/colorWhite"
       android:layout_margin="@dimen/size_5"
       android:orientation="vertical">
      <include layout="@layout/layout_customer_det"/>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/linear_cust_det"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/size_10"
       android:orientation="vertical"
       android:visibility="visible">

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:theme="@style/TextInputLayoutAppearance"
         >

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/edt_name_Addcall"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:fontFamily="sans-serif"
             android:hint="Name(Customer/Company/Site) *"
             android:inputType="text"
             android:padding="@dimen/size_10"
             android:textColor="@color/colorBlack"
             android:textSize="14sp" />
      </com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/TextInputLayoutAppearance">
   <com.google.android.material.textfield.TextInputEditText
       android:id="@+id/edt_email_Addcall"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/size_10"
       android:fontFamily="sans-serif"
       android:hint="Email"
       android:inputType="textEmailAddress"
       android:padding="@dimen/size_10"
       android:textColor="@color/colorBlack"
       android:textSize="14sp" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/TextInputLayoutAppearance">

   <com.google.android.material.textfield.TextInputEditText
       android:id="@+id/edt_mob_Addcall"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/size_10"
       android:digits="1234567890"
       android:fontFamily="sans-serif"
       android:hint="Mobile *"
       android:inputType="number"
       android:padding="@dimen/size_10"
       android:textColor="@color/colorBlack"
       android:textSize="14sp" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/TextInputLayoutAppearance">
   <com.google.android.material.textfield.TextInputEditText
       android:id="@+id/edt_gst_Addcall"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/size_10"
       android:fontFamily="sans-serif"
       android:hint="GST No."
       android:padding="@dimen/size_10"

       android:textColor="@color/colorBlack"
       android:textSize="14sp" />
</com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:theme="@style/TextInputLayoutAppearance">

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/edt_pan_Addcall"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/size_10"
             android:fontFamily="sans-serif"
             android:hint="PAN No."

             android:padding="@dimen/size_10"
             android:textColor="@color/colorBlack"
             android:textSize="14sp" />

      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:theme="@style/TextInputLayoutAppearance">

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/edt_cin_Addcall"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/size_10"
             android:fontFamily="sans-serif"
             android:hint="CIN No."
             android:padding="@dimen/size_10"
             android:textColor="@color/colorBlack"
             android:textSize="14sp" />

      </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:theme="@style/TextInputLayoutAppearance">
         <EditText
             android:id="@+id/edt_add_Addcall"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:baselineAligned="false"
             android:fontFamily="sans-serif"
             android:gravity="top"
             android:hint="Address *"
             android:layout_marginTop="@dimen/size_10"

             android:inputType="textMultiLine"
             android:padding="@dimen/size_10"
             android:textColor="@color/colorBlack"
             android:textSize="14sp" />

      </com.google.android.material.textfield.TextInputLayout>


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_10"

          android:padding="@dimen/size_8">

         <Spinner
             android:id="@+id/spnr_custAdd_call"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/light_gray"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_10"

          android:padding="@dimen/size_8">

         <Spinner
             android:id="@+id/spnr_cityAdd_call"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/light_gray"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_10"

          android:padding="@dimen/size_8">

         <Spinner
             android:id="@+id/spnr_routeAdd_call"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/light_gray"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="@dimen/size_8"
          android:orientation="horizontal">

         <!--         <TextView-->
         <!--             android:id="@+id/txtdoc"-->
         <!--             android:layout_width="wrap_content"-->
         <!--             android:layout_height="wrap_content"-->
         <!--             android:fontFamily="sans-serif"-->
         <!--             android:text="Other Documents:"-->
         <!--             android:layout_marginTop="@dimen/size_8"-->
         <!--             android:textColor="@color/colorBlack"-->
         <!--             android:textSize="14sp" />-->

         <Button
             android:id="@+id/btn_chose_AddCall"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_margin="@dimen/size_20"
             android:layout_marginTop="@dimen/size_20"
             android:layout_weight="1"
             android:background="@drawable/drawable_btn"
             android:fontFamily="sans-serif"
             android:padding="@dimen/size_10"
             android:text="Upload Image"
             android:textAllCaps="false"
             android:textColor="@color/colorWhite"
             android:textSize="14sp" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/size_10"
             android:layout_weight="1"
             android:orientation="vertical">

            <ImageView
                android:id="@+id/img_upload"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_toRightOf="@id/btn_chose_AddCall"
                android:background="@drawable/drawable_editext"
                android:scaleType="fitXY"
                android:src="@drawable/ic_cancel" />

            <TextView
                android:id="@+id/txt_files_Add_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/size_8"
                android:fontFamily="sans-serif"
                android:text="No file Chosen"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
         </LinearLayout>


      </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_10"

          android:padding="@dimen/size_8">

         <Spinner
             android:id="@+id/spnr_statusAdd_call"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/light_gray"/>
   </LinearLayout>
   <View
       android:id="@+id/view"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="3dp"
       android:background="@color/lightest_gray"/>

     <LinearLayout
         android:id="@+id/linear_call_det"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_margin="@dimen/size_8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Call Details :"
            android:textColor="@color/colorBlack"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8"
            android:layout_marginTop="@dimen/size_10"
            >
           <Spinner
               android:id="@+id/spnr_prod_catAdd_call"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8"
            android:layout_marginTop="@dimen/size_10"
            >
           <Spinner
               android:id="@+id/spnr_prodAdd_call"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8"
            android:layout_marginTop="@dimen/size_10"
            >
           <Spinner
               android:id="@+id/spnr_typeAdd_call"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <LinearLayout
            android:id="@+id/lin_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="sans-serif"
                android:text="Service Criteria *"/>
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/size_5"
               >

              <RadioButton
                  android:id="@+id/rdo_single"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Single Call Schedule"
                  android:textColor="@color/text_color"
                  android:fontFamily="sans-serif"
                  android:textSize="14sp"
                  />
              <RadioButton
                  android:id="@+id/rdo_multiple"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Multiple Call Schedule"
                  android:textColor="@color/text_color"
                  android:fontFamily="sans-serif"
                  android:textSize="14sp"
                  android:layout_marginLeft="@dimen/size_5"/>
           </RadioGroup>
           <LinearLayout
               android:id="@+id/linear_callScheduledt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/size_10"
               >
              <TextView
                  android:id="@+id/txtdtCall"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="@color/colorBlack"
                  android:fontFamily="sans-serif"
                  android:text="Single Call Schedule Date *"
                  />
              <LinearLayout
                  android:id="@+id/linear_date_CallSchedulel"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/size_5"
                  android:background="@drawable/drawable_editext">

                 <TextView
                     android:id="@+id/txt_dt_callSchedule"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="14sp"

                     android:layout_weight="1"
                     android:fontFamily="sans-serif"
                     android:padding="8dp"
                     android:text="DD/MM/YYY" />

                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="25dp"
                     android:layout_gravity="center_vertical"
                     android:src="@drawable/ic_calendar"/>
              </LinearLayout>
           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_servMultiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_8">

           <LinearLayout
               android:id="@+id/linear_frmToDate"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="2"
               android:layout_marginTop="@dimen/size_5">

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Service from Date *"
                     android:textSize="14sp"
                     android:fontFamily="sans-serif"
                     android:textColor="@color/colorBlack" />
                 <LinearLayout
                     android:id="@+id/linear_frmdate_multiple"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:background="@drawable/drawable_editext">
                    <TextView
                        android:id="@+id/txtFrmDate_multiple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:padding="8dp"
                        android:text="DD/MM/YYY" />

                    <ImageView
                        android:id="@+id/img_frmDate"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"/>
                 </LinearLayout>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Service to Date *"
                     android:textSize="14sp"
                     android:fontFamily="sans-serif"
                     android:textColor="@color/colorBlack" />

                 <LinearLayout
                     android:id="@+id/linear_todate_multiple"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:background="@drawable/drawable_editext">
                    <TextView
                        android:id="@+id/txtToDate_multiple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:padding="8dp"
                        android:text="DD/MM/YYY" />

                    <ImageView
                        android:id="@+id/img_ToDate"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"/>
                 </LinearLayout>
              </LinearLayout>
           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Service Repeat Frequency *"
               android:textColor="@color/colorBlack"
               android:textSize="14sp"
               android:layout_marginTop="@dimen/size_8"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/size_10"
               android:layout_marginTop="@dimen/size_8"
               >

              <Spinner
                  android:id="@+id/spnr_serv_repeat_freq"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/light_gray"/>
           <LinearLayout
               android:id="@+id/linear_no_of_days"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="visible">

              <LinearLayout
                  android:id="@+id/linear_date"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:layout_marginTop="@dimen/size_10"
                  >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="14sp"
                     android:textColor="@color/colorBlack"
                     android:fontFamily="sans-serif"
                     android:text="Date *"
                     />
                 <LinearLayout
                     android:id="@+id/linear_date_freq"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_marginTop="@dimen/size_5"
                     android:background="@drawable/drawable_editext">

                    <TextView
                        android:id="@+id/txt_dt_freq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"

                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:padding="8dp"
                        android:text="DD/MM/YYY" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar"/>
                 </LinearLayout>
              </LinearLayout>
               <LinearLayout
                   android:id="@+id/lin_no"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:visibility="gone"
                   android:layout_marginTop="@dimen/size_8"
                   android:orientation="vertical">
                  <com.google.android.material.textfield.TextInputLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:theme="@style/TextInputLayoutAppearance">
                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/edt_no_of_days"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textSize="14sp"
                         android:padding="10dp"
                         android:fontFamily="sans-serif"
                         android:textColor="@color/colorBlack"
                         android:hint="No. of Days *"
                         />
                  </com.google.android.material.textfield.TextInputLayout>


               </LinearLayout>

           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_dateOf_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_10"
            >
           <TextView
               android:id="@+id/txtdt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:textColor="@color/colorBlack"
               android:fontFamily="sans-serif"
               android:text="Date Of Sale *"
               />
           <LinearLayout
               android:id="@+id/linear_date_addCall"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/size_5"
               android:background="@drawable/drawable_editext">

              <TextView
                  android:id="@+id/txt_dt_addCall"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:fontFamily="sans-serif"
                  android:padding="8dp"
                  android:textColor="@color/colorBlack"
                  android:text="DD/MM/YYY" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="25dp"
                  android:layout_gravity="center_vertical"
                  android:src="@drawable/ic_calendar"/>
           </LinearLayout>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayoutAppearance">
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/edt_comment_Addcall"
               android:layout_width="match_parent"
               android:layout_height="@dimen/size_100"
               android:textColor="@color/colorBlack"
               android:textSize="14sp"
               android:gravity="top"
               android:fontFamily="sans-serif"
               android:layout_marginTop="@dimen/size_10"
               android:inputType="textMultiLine"
               android:padding="@dimen/size_10"
               android:hint="Comment"/>
        </com.google.android.material.textfield.TextInputLayout>



     </LinearLayout>
</LinearLayout>

</ScrollView>