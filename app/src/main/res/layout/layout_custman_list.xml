<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/size_5"
        app:cardCornerRadius="2dp"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@string/str_font_bold"
                    android:layout_weight="0.1"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="0.9"
                    android:clickable="true"
                    android:padding="1dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginLeft="@dimen/size_5"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_weight="0.2"
                android:fontFamily="@string/str_font_medium"
                android:textColor="@color/text_color"
                android:textSize="12sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/size_5">

                <ImageView
                    android:id="@+id/imgMob"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_callsvg" />
                <TextView
                    android:id="@+id/txt_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="fffff"
                    android:layout_toRightOf="@id/imgMob"
                    android:layout_weight="0.2"
                    android:fontFamily="@string/str_font_medium"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linear_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="@dimen/size_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product :"
                    android:layout_weight="0.8"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txt_prod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_weight="0.2"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rel_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/size_5">

                <ImageView
                    android:id="@+id/imgMail"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_mail" />
                <TextView
                    android:id="@+id/txt_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mail"
                    android:layout_toRightOf="@id/imgMail"
                    android:layout_weight="0.2"
                    android:fontFamily="@string/str_font_medium"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>


              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right">
                  <TextView
                      android:id="@+id/txt_custName"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Name"
                      android:layout_marginTop="2dp"
                      android:layout_marginRight="3dp"
                      android:layout_weight="0.2"
                      android:fontFamily="@string/str_font_regular"
                      android:textColor="@color/text_color"
                      android:textSize="12sp"/>
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:layout_marginLeft="3dp"
                      android:layout_toRightOf="@id/txt_custName"
                      android:src="@drawable/ic_cust"/>
              </RelativeLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/size_8"
    android:visibility="gone"
    android:layout_gravity="right">
    <Button
        android:id="@+id/btn_status"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Pending"
        android:layout_marginRight="5dp"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:gravity="center"

        android:clickable="true"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="@dimen/size_2"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textStyle="bold"
        android:background="@drawable/drawable_status_pend"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_gravity="right"/>
    <Button
        android:id="@+id/btn_creCall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Create A Call"

        android:layout_marginLeft="5dp"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:gravity="center"
        android:clickable="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="@dimen/size_2"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textStyle="bold"
        android:visibility="gone"
        android:background="@drawable/drawable_btn"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_gravity="right"/>
</LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>